@model IEnumerable<Hovedopgave1.Models.Virksomhed>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VirksomhedListe</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <style>
        .divider {
            width: 5px;
            height: auto;
            display: inline-block;
        }
    </style>
</head>
<body>
   
    <div>
        @using (Html.BeginForm("VirksomhedListe", "Home"))
        {
            <input type="text" placeholder="Søg på Navn" name="Navn" />
            <input type="text" placeholder="Søg på Opgavetype" name="Opgave" />
            <input type="text" placeholder="Søg på Profiler" name="Profiler" />
            <input type="submit" value="Søg" />
        }
        </div>
   
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Navn)</th>
            <th>@Html.DisplayNameFor(model => model.KontaktPerson)</th>
            <th>@Html.DisplayNameFor(model => model.Telefon)</th>
            <th>@Html.DisplayNameFor(model => model.Mail)</th>
            <th>@Html.DisplayNameFor(model => model.VirksomhedsInfo)</th>
            <th>@Html.DisplayNameFor(model => model.MuligeOpgaver)</th>
            <th>@Html.DisplayNameFor(model => model.Profiler)</th>
            <th>@Html.DisplayNameFor(model => model.OpgaveLøsning)</th>
            <th>@Html.DisplayNameFor(model => model.Styrkeposition)</th>
        </tr>
        @foreach (var s in Model)
        {


            <tr>
                <td>@Html.DisplayFor(models => s.Navn)</td>
                <td>@Html.DisplayFor(models => s.KontaktPerson)</td>
                <td>@Html.DisplayFor(models => s.Telefon)</td>
                <td>@Html.DisplayFor(models => s.Mail)</td>
                <td>@Html.DisplayFor(models => s.VirksomhedsInfo)</td>
                <td>@Html.DisplayFor(models => s.MuligeOpgaver)</td>
                <td>@Html.DisplayFor(models => s.Profiler)</td>
                <td>@Html.DisplayFor(models => s.OpgaveLøsning)</td>
                <td>@Html.DisplayFor(models => s.Styrkeposition)</td>

                <td>@Html.ActionLink("Rediger", "RedigerVirksomhed", "Home", new {id = s.Id }, new { @class = "btn btn-primary" })</td>

                <td>

                    @Html.ActionLink("Slet", "VirksomhedDelete", new { id = s.Id}, new { @class = "btn btn-primary" })
                </td>

            </tr>
        }


    </table>
</body>
</html>
